<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Home</title>

    <link href="~/CSS/About.css" rel="stylesheet" />
</head>
<body>
    
    <nav class="navbar">
        <span class="open-slide">
            <a href="#" onclick="openSlideMenu()">
                <svg width="30" height="30">
                    <path d="M0,5 30,5" stroke="#fff" stroke-width="5" />
                    <path d="M0,14 30,14" stroke="#fff" stroke-width="5" />
                    <path d="M0,23 30,23" stroke="#fff" stroke-width="5" />
                </svg>
            </a>
        </span>

        <ul class="navbar-nav">
            <li><a href="/Default/SalaUsuario">Home</a></li>
            <li><a href="/Default/AboutUsuario">About</a></li>
            <li><a href="/Default/ServicesUsuario">Services</a></li>
            <li><a href="/Default/ContactUsuario">Contact</a></li>
            <li><a href="/Default/Home">Logout</a></li>
        </ul>
    </nav>

    <div id="side-menu" class="side-nav">
        <a href="#" class="btn-close" onclick="closeSlideMenu()">&times;</a>
        <a href="/Default/SalaUsuario">Home</a>
        <a href="/Default/AboutUsuario">About</a>
        <a href="/Default/ServicesUsuario">Services</a>
        <a href="/Default/ContactUsuario">Contact</a>
        <a href="/Default/Home">Logout</a>
    </div>
    <div id="main">
        @if (Session["Usuario"] != null)
        {
            <text>
                Bem-Vindo @Session["Usuario"].ToString()
            </text>
        }
    </div>

    <script>
        function openSlideMenu() {
            document.getElementById('side-menu').style.width = '250px';
            document.getElementById('main').style.marginLeft = '250px';
        }

        function closeSlideMenu() {
            document.getElementById('side-menu').style.width = '0';
            document.getElementById('main').style.marginLeft = '0';
        }
    </script>
</body>
</html>
